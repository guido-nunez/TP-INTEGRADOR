extends ./layout

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Proyecto
            span.font-normal Universidad
        h2.text-center.text-2xl.font-extrabold= pagina

        // Mostrar errores si existen
        if errores
            .max-w-md.mx-auto.my-10
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        // Formulario para crear estudiantes
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method='POST' action='/estudiantes' noValidate)
                    // Campo para DNI
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="dni") DNI
                        input#dni.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="DNI" type="number" name="dni" value=estudiante? estudiante.dni : '')

                    // Campo para Nombre
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nombre") Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre" type="text" name="nombre" value=estudiante? estudiante.nombre : '')

                    // Campo para Apellido
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="apellido") Apellido
                        input#apellido.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Apellido" type="text" name="apellido" value=estudiante? estudiante.apellido : '')

                    // Campo para Email
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email" type="email" name="email" value=estudiante? estudiante.email : '')

                    
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Registrar Estudiante")
