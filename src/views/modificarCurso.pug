extends ./layout

block contenido
    .max-w-2xl.mx-auto.px-4.py-10
        h1.text-4xl.font-extrabold.text-center Modificar Curso

        form(method="POST" action=`/cursos/modificarCurso/${curso.id}`)

            .mb-6
                label(for="nombre" class="block text-sm font-medium text-gray-700") Nombre del Curso
                input(type="text" id="nombre" name="nombre" class="mt-1 block w-full border border-gray-300 p-2 rounded-md" required value=curso.nombre)

            .mb-6
                label(for="descripcion" class="block text-sm font-medium text-gray-700") Descripci√≥n
                textarea(id="descripcion" name="descripcion" class="mt-1 block w-full border border-gray-300 p-2 rounded-md" required)= curso.descripcion

            .mb-6
                label(for="profesor_id" class="block text-sm font-medium text-gray-700") Profesor
                select(id="profesor_id" name="profesor_id" class="mt-1 block w-full border border-gray-300 p-2 rounded-md" required)
                    option(value="") Selecciona un profesor
                    each profesor in profesores
                        option(value=profesor.id selected=(curso.profesor.id == profesor.id))= profesor.nombre + " " + profesor.apellido

            .flex.justify-center
                button(type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded") Modificar Curso
