extends ./layout

block contenido
    .max-w-2xl.mx-auto.px-4.py-10
        h1.text-4xl.font-extrabold.text-center Modificar Inscripción

        form(method="POST" action=`/inscripciones/modificarInscripcion/${inscripcion.estudiante.id}/${inscripcion.curso.id}`)

            .mb-6
                label(for="estudiante_nombre" class="block text-sm font-medium text-gray-700") Estudiante
                input(type="text" id="estudiante_nombre" name="estudiante_nombre" class="mt-1 block w-full border border-gray-300 p-2 rounded-md" readonly value=`${inscripcion.estudiante.nombre} ${inscripcion.estudiante.apellido}`)

            .mb-6
                label(for="curso_nombre" class="block text-sm font-medium text-gray-700") Curso
                input(type="text" id="curso_nombre" name="curso_nombre" class="mt-1 block w-full border border-gray-300 p-2 rounded-md" readonly value=inscripcion.curso.nombre)

            .mb-6
                label(for="nota" class="block text-sm font-medium text-gray-700") Nota
                input(type="number" id="nota" name="nota" class="mt-1 block w-full border border-gray-300 p-2 rounded-md" min="0" max="10" step="1" required value=inscripcion.nota)

            .mb-6
                label(for="fecha_inscripcion" class="block text-sm font-medium text-gray-700") Fecha de Inscripción
                input(type="date" id="fecha_inscripcion" name="fecha_inscripcion" class="mt-1 block w-full border border-gray-300 p-2 rounded-md" required value=inscripcion.fechaInscripcion)

            .flex.justify-center
                button(type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded") Modificar Inscripción
